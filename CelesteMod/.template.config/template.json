{
  "$schema": "http://json.schemastore.org/template",
  "author": "Shane Woolcock",
  "classifications": [ "Celeste", "Mod", "Console" ],
  "identity": "CelesteMod.CSharp",
  "name": "Sample project for Celeste modding",
  "shortName": "celestemod",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CelesteMod",
  "preferNameDirectory": true,
  "symbols": {
    "Samples": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Exports": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Hooks": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Settings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "Session": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "Logging": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "exclude": [
        ".idea/**/*",
        ".template.config/**/*",
        "bin/**/*",
        "obj/**/*"
      ],
      "modifiers": [
        {
          "condition": "(!Samples)",
          "exclude": [
            "Ahorn/**/*",
            "Dialog/**/*",
            "Entities/**/*",
            "Graphics/**/*",
            "Loenn/**/*",
            "Triggers/**/*"
          ]
        },
        {
          "condition": "(!Exports)",
          "exclude": [
            "CelesteModExports.cs"
          ]
        },
        {
          "condition": "(!Session)",
          "exclude": [
            "CelesteModModuleSession.cs"
          ]
        },
        {
          "condition": "(!Settings)",
          "exclude": [
            "CelesteModModuleSettings.cs"
          ]
        }
      ]
    }
  ]
}