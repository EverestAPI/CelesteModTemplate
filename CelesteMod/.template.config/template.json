{
  "$schema": "http://json.schemastore.org/template",
  "author": "EverestAPI",
  "classifications": [ "Celeste", "Mod", "Console" ],
  "identity": "CelesteMod.CSharp",
  "name": "Sample project for Celeste modding",
  "shortName": "celestemod",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CelesteMod",
  "preferNameDirectory": true,
  "symbols": {
    "Samples": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Exports": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Settings": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "Session": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "SaveData": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "Logging": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "GitHub": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Core": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    },
    "Legacy": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "exclude": [
        ".idea/**/*",
        ".template.config/**/*",
        "bin/**/*",
        "obj/**/*",
        "everest-core.yaml",
        "CelesteMod-core.csproj"
      ],
      "modifiers": [
        {
          "condition": "(!Samples)",
          "exclude": [
            "Ahorn/**/*",
            "Dialog/**/*",
            "Entities/**/*",
            "Graphics/**/*",
            "Loenn/**/*",
            "Triggers/**/*"
          ]
        },
        {
          "condition": "(!GitHub)",
          "exclude": [
            ".github/**/*"
          ]
        },
        {
          "condition": "(!Exports)",
          "exclude": [
            "CelesteModExports.cs"
          ]
        },
        {
          "condition": "(!Session)",
          "exclude": [
            "CelesteModModuleSession.cs"
          ]
        },
        {
          "condition": "(!Settings)",
          "exclude": [
            "CelesteModModuleSettings.cs"
          ]
        },
        {
          "condition": "(!SaveData)",
          "exclude": [
            "CelesteModModuleSaveData.cs"
          ]
        },
        {
          "condition": "(!Legacy)",
          "include": [
            "everest-core.yaml",
            "Source/CelesteMod-core.csproj"
          ],
          "exclude": [
            "everest.yaml",
            "Source/CelesteMod.csproj"
          ],
          "rename": {
            "everest-core.yaml": "everest.yaml",
            "Source/CelesteMod-core.csproj": "Source/CelesteMod.csproj"
          }
        }
      ]
    }
  ]
}